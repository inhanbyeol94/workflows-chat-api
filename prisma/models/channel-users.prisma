/// 채널에 속한 사용자 (비밀채널인 경우)
model ChannelUsers {
  channelId Int      @map("channel_id") /// 채널 아이디
  userId    Int      @map("user_id") /// 사용자 아이디
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3) /// 생성일

  modules.channel Channel @relation(fields: [channelId], references: [id]) /// 채널
  modules.user    User    @relation(fields: [userId], references: [id]) /// 사용자

  @@id([channelId, userId]) /// 복합키
  @@map("channel_users")
}
